<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Nome da unidade de persistÃªncia usado no cÃ³digo -->
    <persistence-unit name="gamePU" transaction-type="RESOURCE_LOCAL">

        <!-- Provedor Hibernate -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades do projeto -->
        <class>model.Usuario</class>
        <class>model.Biblioteca</class>
        <class>model.Cartao</class>
        <class>model.Entidade</class>
        <class>model.Jogo</class>
        <class>model.Dlc</class>
        <!-- Pode adicionar mais se quiser, o Hibernate ignora duplicadas -->

        <!-- Propriedades de conexÃ£o -->
        <properties>
            <!-- ConexÃ£o com o banco -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/game_db?createDatabaseIfNotExist=true&amp;useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Dialeto do MySQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- ðŸ”¥ GeraÃ§Ã£o automÃ¡tica das tabelas -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Log SQL no console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Desabilita cache de segundo nÃ­vel (pra simplificar no estudo) -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>

    </persistence-unit>
</persistence>
